@model List<PierresBakery.Models.Vendor>
@{
    ViewBag.Title = "Vendors";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h1>Vendors</h1>
    @if (Model.Count == 0)
    {
        <p>No vendors found.</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Vendor vendor in Model)
                {
                    <tr>
                        <td>
                            <a style="color: rebeccapurple; text-decoration: none" href="@Url.Action("Index", "Vendors", new { vendorId = vendor.VendorId })">@vendor.Name</a>
                        </td>

                        <td>@vendor.Description</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    <a href="@Url.Action("new", "Vendors")" class="btn btn-primary">Create New Vendor</a>
</div>
